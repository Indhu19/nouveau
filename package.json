{
  "name": "react-boilerplate",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc -b && vite build --mode development",
    "build:prod": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "yarn build:prod && vite preview",
    "postinstall": "husky",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "playwright": "playwright test",
    "playwright:ui": "playwright test --ui",
    "playwright:debug": "playwright test --debug",
    "playwright:codegen": "playwright codegen",
    "coverage": "vitest run --coverage",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "analyze": "ANALYZE=true yarn build"
  },
  "dependencies": {
    "@auth0/auth0-react": "^2.3.0",
    "@radix-ui/react-alert-dialog": "^1.1.14",
    "@radix-ui/react-avatar": "^1.1.9",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tooltip": "^1.2.6",
    "@sentry/react": "^9.18.0",
    "@sentry/vite-plugin": "^3.4.0",
    "@tailwindcss/vite": "^4.1.5",
    "@tanstack/react-query": "^5.75.5",
    "@tanstack/react-query-devtools": "^5.75.5",
    "@tanstack/react-router": "^1.120.2",
    "@tanstack/react-router-devtools": "^1.120.2",
    "@tanstack/react-table": "^8.21.3",
    "@tanstack/router-core": "^1.120.3",
    "axios": "^1.9.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "i18next": "^25.2.1",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-http-backend": "^3.0.2",
    "immer": "^10.1.1",
    "lucide-react": "^0.509.0",
    "motion": "^12.15.0",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.3",
    "react-i18next": "^15.5.2",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^4.1.5",
    "tw-animate-css": "^1.2.9",
    "zod": "^3.25.56",
    "zustand": "^5.0.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0-0",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.26.0",
    "@faker-js/faker": "^9.8.0",
    "@playwright/test": "^1.52.0",
    "@storybook/addon-a11y": "9.0.12",
    "@storybook/addon-designs": "^10.0.1",
    "@storybook/addon-docs": "9.0.12",
    "@storybook/addon-themes": "9.0.12",
    "@storybook/addon-vitest": "9.0.12",
    "@storybook/react-vite": "9.0.12",
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@tanstack/eslint-plugin-router": "^1.115.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^22.15.17",
    "@types/react": "^19.1.5",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react-swc": "^3.8.0",
    "@vitest/browser": "3.1.4",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "3.1.4",
    "csstype": "^3.1.3",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.3",
    "eslint-formatter-gitlab": "^6.0.0",
    "eslint-plugin-i18next": "^6.1.1",
    "eslint-plugin-perfectionist": "^4.13.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "9.0.12",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "msw": "^2.8.6",
    "msw-storybook-addon": "^2.0.5",
    "playwright": "^1.52.0",
    "prettier": "3.5.3",
    "rollup-plugin-visualizer": "^6.0.1",
    "storybook": "9.0.12",
    "tiny-invariant": "^1.3.3",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.32.0",
    "vite": "^6.3.5",
    "vitest": "^3.1.4"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": "eslint --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "prettier": {
    "semi": true,
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
