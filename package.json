    "cmdk": "^1.1.1",
    "csstype": "^3.1.3",
    "date-fns": "^4.1.0",
    "i18next": "^25.0.1",
    "i18next-browser-languagedetector": "^8.0.5",
    "i18next-http-backend": "^3.0.2",
    "i18next-locize-backend": "^7.0.4",
    "immer": "^10.1.1",
    "lucide-react": "^0.507.0",
    "motion": "^12.8.0",
    "next-themes": "^0.4.6",
